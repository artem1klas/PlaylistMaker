<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:layout_margin="4dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@color/color_background"
        android:src="@drawable/image_placeholdertrack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:ellipsize="end"
        android:fontFamily="@font/ys_text_regular"
        android:maxLines="1"
        android:textColor="@color/color_text"
        android:textSize="12sp"
        tools:text="trackName"
        app:layout_constraintTop_toBottomOf="@id/playlistImage"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/playlistSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:ellipsize="end"
        android:fontFamily="@font/ys_text_regular"
        android:maxLines="1"
        android:textColor="@color/color_text"
        android:textSize="12sp"
        tools:text="40 треков"
        app:layout_constraintTop_toBottomOf="@id/playlistName"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>