<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_settings_color_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/contur_margin"
    android:paddingEnd="@dimen/contur_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/settings_arrow_back"
            style="@style/button_back"
            app:icon="@drawable/icon_arrow_back" />

        <TextView
            style="@style/top_text"
            android:text="@string/settings" />
    </LinearLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchcompat"
        style="@style/settings_switch"
        tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <FrameLayout style="@style/settings_frame">

        <TextView
            style="@style/settings_frame_text"
            android:text="@string/share" />

        <Button
            android:id="@+id/settings_share"
            style="@style/settings_frame_button"
            app:icon="@drawable/icon_share" />
    </FrameLayout>

    <FrameLayout style="@style/settings_frame">

        <TextView
            style="@style/settings_frame_text"
            android:text="@string/call_support" />

        <Button
            android:id="@+id/settings_support"
            style="@style/settings_frame_button"
            app:icon="@drawable/icon_support" />
    </FrameLayout>

    <FrameLayout style="@style/settings_frame">

        <TextView
            style="@style/settings_frame_text"
            android:text="@string/user_agree" />

        <Button
            android:id="@+id/settings_agreement"
            style="@style/settings_frame_button"
            app:icon="@drawable/icon_arrow_forward" />
    </FrameLayout>
</LinearLayout>