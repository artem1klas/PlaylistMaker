<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="com.example.playlistmaker.ui.player.PlayerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/contur_margin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/contur_margin" />

    <Button
        android:id="@+id/arrowBack"
        style="@style/button_back"
        app:icon="@drawable/icon_arrow_back"
        app:layout_constraintStart_toEndOf="@id/startBorder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый плейлист"
        app:layout_constraintStart_toEndOf="@id/arrowBack"
        app:layout_constraintBaseline_toBaselineOf="@id/arrowBack"/>

    <ImageButton
        android:id="@+id/newPlayListImage"
        android:layout_width="0dp"
        android:layout_height="254dp"
        android:src="@drawable/ic_new_playlist"
        app:layout_constraintEnd_toEndOf="@id/endBorder"
        app:layout_constraintStart_toStartOf="@id/startBorder"
        app:layout_constraintTop_toBottomOf="@+id/arrowBack"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/new_plailist_image"/>

    <EditText
        android:id="@+id/namePlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/new_playlist_edittext"
        android:drawablePadding="8dp"
        android:fontFamily="@font/ys_text_regular"
        android:hint="Название*"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginTop="32dp"
        android:paddingVertical="10dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/color_search_textColorHint"
        android:textCursorDrawable="@drawable/cursor"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/newPlayListImage"
        app:layout_constraintStart_toStartOf="@id/startBorder"
        app:layout_constraintEnd_toEndOf="@id/endBorder"/>

    <EditText
        android:id="@+id/descriptionPlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/new_playlist_edittext"
        android:drawablePadding="8dp"
        android:fontFamily="@font/ys_text_regular"
        android:hint="Описание"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:paddingVertical="10dp"
        android:paddingStart="12dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/color_search_textColorHint"
        android:textCursorDrawable="@drawable/cursor"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/namePlaylist"
        app:layout_constraintStart_toStartOf="@id/startBorder"
        app:layout_constraintEnd_toEndOf="@id/endBorder"/>



    <Button
        android:id="@+id/createPlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Создать"
        android:background="@drawable/new_playlist_createbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/startBorder"
        app:layout_constraintEnd_toEndOf="@id/endBorder"
        android:layout_marginBottom="32dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>