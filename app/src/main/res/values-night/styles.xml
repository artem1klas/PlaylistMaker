<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_back">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="top_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">@dimen/contur_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/contur_margin</item>
        <item name="android:layout_marginBottom">@dimen/contur_margin</item>
        <item name="android:text">@string/dark_theme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="trackTint">@color/blue_light</item>
        <item name="thumbTint">@color/blue</item>
    </style>

    <style name="settings_frame_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="settings_frame_button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="window_not_found">
        <item name="android:src">@drawable/image_not_found_night</item>
    </style>

    <style name="window_disconnect">
        <item name="android:src">@drawable/image_no_internet_night</item>
    </style>

    <style name="problem_update_button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/update_button</item>
    </style>

    <style name="problem_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>