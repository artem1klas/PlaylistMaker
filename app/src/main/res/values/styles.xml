<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_margin">@dimen/contur_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/button_margin_in_main</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_in_main</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="button_back">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="top_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">@dimen/contur_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settings_switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/contur_margin</item>
        <item name="android:layout_marginBottom">@dimen/contur_margin</item>
        <item name="android:text">@string/dark_theme</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="trackTint">@color/ligth_gray</item>
        <item name="thumbTint">@color/text_gray</item>
    </style>

    <style name="settings_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/contur_margin</item>
        <item name="android:layout_marginBottom">@dimen/contur_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="settings_frame_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="settings_frame_button">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/text_gray</item>
    </style>
</resources>